{
  "version": 2,

  "builds": [
    { "src": "api/enrich.ts", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],

  "routes": [
    { "src": "/api/enrich", "dest": "api/enrich.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}